<ul id="specs-collection" class="collection">
    {% for file in files %}
        <li class="collection-item">
            <div class="row">
                <div class="col s12">
                    {# <div class="col s1"><i class="material-icons">insert_drive_file</i></div> #}
                    <div class="col s1"><img src="/img/file-icon.svg"></div>
                    <span class="col s10 file-title">{{ file.name }}</span>
                    <span class="col s1 format"> {{ file.extension }} </span>
                </div>
            </div>
        </li>
    {% endfor %}            
    </ul>
    <ul id='specs-context-menu' class='dropdown-content'>
        <li class="option-node"><a id="new_file" class="dropdown-menu" href="#!">New file</a></li>
        <li class="option-node"><a id="remove" class="dropdown-menu" href="#!">Remove</a></li>
        <li class="divider"></li>
        <li class="option-node"><a id="preview" class="dropdown-menu" href="#!">Preview</a></li>
        <li class="option-node"><a id="rename" class="dropdown-menu" href="#!">Rename</a></li>
        <li class="divider"></li>
        <li class="option-node"><a id="download" class="dropdown-menu" href="#!">Download</a></li>
    </ul>