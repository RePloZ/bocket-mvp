<div class="col s12">
    <h5 class="col s10">
        Teammates
        {% if  (user.rights > 4 or user.isProductmanager) %}
            <a href="#invite-people" class="modal-trigger">
                <i class="material-icons right" style="color: #000;">person_add</i>
            </a>
            {% include 'modals/invitePeople.twig' %}
        {% endif %}
    </h5>
</div>
<div class="col s12">
    <h6>Product Manager</h6>
    {% for manager  in users.ProductManagers %}
        <div class="valign-wrapper" style="width: 100%; text-align: right; display: inline-block">
        <div class="user-block" style="display: inline-block; background-image: url('/user/image/{{ currentOrganization.Owner._id }}')">
            <div style="width: 40px; height: 40px;">
                <div class="circle-user-responsive">
                    <div class="circle-user-content">
                        {{ manager.completeName | capitalize | first }}
                    </div>
                </div>
            </div>
        </div>
        <p class="user-name">{{ manager.completeName }}</p>
        {% if  user.rights > 4 %}
            <div class="row">
                <div class="input-field col s5 push-s1" style="height: 21.75px; margin: 0">
                    <select>
                        <option value="" disabled>Choose your option</option>
                        <option value="ProductManagers" selected>Product Manager</option>
                        <option value="Teammates">Member</option>
                        <option value="Observers">Observer</option>
                    </select>
                </div>
                <div class="col s4 push-s2">
                    <a href="#!" style="display: inline-block; margin-top: 10px">Remove</a>
                </div>
            </div>
            </div>
        {% endif %}
    {% endfor %}
</div>
<h6>Members</h6>
{% if (users.Teammates|length) == 0 %}
    <p>There is no Member</p>
{% endif %}
    {% for teammate in users.Teammates %}
        <div class="valign-wrapper" id="user-{{ user._id }}">
            <div class="user-block" style="display: inline-block; background-image: url('/user/image/{{ currentOrganization.Owner._id }}')">
                <div style="width: 40px; height: 40px;">
                    <div class="circle-user-responsive">
                        <div class="circle-user-content">
                            {{ teammate.completeName |first |capitalize }}
                        </div>
                    </div>
                </div>
            </div>
            <p class="user-name">{{ teammate.completeName }}</p>
            {% if  (user.rights > 4 or user.isProductmanager) %}
                <div class="valign-wrapper" style="width: 100%; text-align: right; display: inline-block">
                    <div class="row">
                        <div class="input-field col s5 push-s1" style="height: 21.75px; margin: 0">
                            <select>
                                <option value="" disabled>Choose your option</option>
                                <option value="ProductManagers">Product Manager</option>
                                <option value="Teammates" selected>Member</option>
                                <option value="Observers">Observer</option>
                            </select>
                        </div>
                        <div class="col s4 push-s2">
                            <a onclick="deleteUser("{{ teammate._id }}") href="#!" style="display: inline-block; margin-top: 10px">Remove</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    {% endfor %}
<h6>Observers</h6>
{% if (users.Observers|length) == 0 %}
    <p>There is no Observer</p>
{% endif %}
    {% for observer in users.Observers %}
