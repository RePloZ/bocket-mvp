                    </div>
                </div>
            </div>
            <p class="user-name">{{ observer.completeName }}</p>
            {% if  (user.rights > 4 or user.isProductmanager) %}
                <div class="valign-wrapper" style="width: 100%; text-align: right; display: inline-block">
                    <div class="row">
                        <div class="input-field col s5 push-s1" style="height: 21.75px; margin: 0">
                            <select>
                                <option value="" disabled>Choose your option</option>
                                <option value="ProductManagers">Product Manager</option>
                                <option value="Teammates">Member</option>
                                <option value="Observers" selected>Observer</option>
                            </select>
                        </div>
                        <div class="col s4 push-s2">
                            <a onclick="deleteUser("{{ observer._id }}") href="#!" style="display: inline-block; margin-top: 10px">Remove</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    {% endfor %}

</div>
