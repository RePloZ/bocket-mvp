<div id="user-options" class="modal" style="width: 75% !important;">
    <div class="modal-content">
        <h4 class="col s12">
            User Settings
            <a class="modal-close" style="color: black;">
                <i class="material-icons right">highlight_off</i>
            </a>
        </h4>
            <div class="row">
                <div class="col s3">

                </div>
                <div class="col s9">
                    <p style="height: 45px">Name: {{ currentUser.completeName }}</p>
                    <p style="height: 45px">E-mail: {{ currentUser.email }}</p>
                    <div class="col s12" style="padding-left: 0px">
                        <div class="row" style="padding-left: 0px">
                            <div class="input-field inline col s6" style="padding-left: 0px">
                                <input id="password" type="password" class="validate">
                                <label for="password">New Password</label>
                            </div>
                            <div class="input-field inline col s6">
                                <button class="btn waves-effect waves-light" type="submit" name="action" style="font-size: 10px;">
                                    Change Password
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <a href="/logout">Log Out</a>
    <a id="#deleteAccount" onclick="deleteAccount()">Delete Account</a>
</div>
{% include 'modals/confirmDeleteAccount.twig' %}

<script>
    function deleteAccount() {
      $('#user-options').modal('close');
      $('#confirmDeleteAccount').modal('open');
    }
</script>