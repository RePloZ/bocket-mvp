<!-- Modal Structure -->
<div id="import-assembly" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <span class="left">Import a new Assembly</span>
            <i class="material-icons right modal-close">highlight_off</i>
        </div>
        <div class="modal-body">
            <form id="form-import-assembly" method="post" action="/test">
                <div class="input-field col s12" style="padding-top: 5%">
                    <input id="assembly-name" type="text" name="name" class="validate">
                    <label for="name">Assembly Name</label>
                </div>

                <div class="input-field col s12" style="padding-top: 5%">
                    <input id="assembly-description" type="text" name="description" class="validate">
                    <label for="description">Description</label>
                </div>

                {#
                <div class="file-field input-field col s12">
                    <div class="files-button btn upload_button">
                        <span>...</span>
                        <input type="file" id="import_assembly_file3d" name="file3D" @change="chargefile">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Upload your 3D Model">
                    </div>
                </div>

                #}
                <div class="separator col s12">
                <div class="file-field input-field col s12" style="padding-top: 5%">
                    <div class="files-button btn upload_button">
                        <span>...</span>
                        <input type="file" multiple id="import_assembly_specfiles" name="specFiles" @change="chargespecFiles">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Upload your Specs File">
                    </div>
                </div>
                <br>
                {#
                <p>Tags</p>
                <div id="tags-import-assembly" class="chips"></div>
                #}
                </div>
                <div class="modal-footer">
                <a class="modal-close btn btn-cancel col s4">Cancel</a>
                <button id="submit-import-assembly" class=" col s6 push-s2 btn btn-valid" type="submit">Import</button>
                </div>
            </form>
        </div>
    </div>
</div>
