<!-- Modal Structure -->
<div id="import-part" class="modal">
    <div class="modal-content">
      <div class="modal-header">
            <span class="left">Import a new Part</span>
            <i class="material-icons right modal-close">highlight_off</i>
        </div>
        <div class="modal-body container">
            <form id="form-import-part" method="post" action="/test">
                <div class="input-field col s12">
                    <input type="text" id="import-part-name" name="name" class="validate">
                    <label for="name">Part Name</label>
                </div>

                <div class="input-field col s12">
                    <input type="text" id="import-part-description" name="description" class="validate">
                    <label for="description">Description</label>
                </div>

                <div class="separator col s12">
                <div class="file-field input-field col s12">
                    <div class="files-button btn upload_button">
                        <span>...</span>
                        <input type="file" id="import-part-file3D" name="file3D" @change="chargefile">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Upload your 3D Model">
                    </div>
                </div>

                <div class="file-field input-field col s12">
                    <div class="files-button btn upload_button">
                        <span>...</span>
                        <input type="file" multiple id="import-part-texture-files" name="textureFiles" @change="chargefile">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Upload your Texture">
                    </div>
                </div>

                <div class="file-field input-field col s12">
                    <div class="files-button btn upload_button">
                        <span>...</span>
                        <input type="file" multiple id="import-part-specFiles" name="specFiles" @change="chargespecFiles">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Upload your Specs File">
                    </div>
                </div>
                </div>
                <br>
                <a class="modal-close btn btn-cancel">Cancel</a>
                <button id="submit-import-part" class="btn btn-valid right" type="submit">Import a Part</button>
            </form>
        </div>
    </div>
</div>
