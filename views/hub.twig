{% extends 'layout_nonavbar.twig' %}

{% block css %}
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,600" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="/css/hub.css">
<link rel="stylesheet" href="/css/accordion.css">
<link rel="stylesheet" href="/css/dropdown.css">
{% endblock %}

{% block title %}{{ title }}{% endblock title %}

{% block body %}
<div class="row">
    <div id="first_column" class="col s3">
        
        <button class="dropdown-button" data-beloworigin="true" data-activates='workspaces-dropdown'>
            <div>
                {{ in_use }} <i class="tiny material-icons">arrow_drop_down</i>
            </div>
            <div class="username-dropdown">
                {{ user }}                
            </div>
        </button>
        
        <ul id="workspaces-dropdown" class="dropdown-content">
            {% for workspace in workspaces %}
            <li><a href="/project/{{workspace}}">{{ workspace }}</a></li>
            {% endfor %}
            <li><a href="/logout">Log Out</a></li>
        </ul>
        
        <div id="project-categories">
            <a href="/project/{{ in_use }}">
                <button class="not-a-button" {% if "All Parts" in title  %}     id="selected" {% endif %}>All parts<span class='right-align badge'>{{ all_parts }}</span></button>
            </a>
            <a href="/project/{{ in_use }}/updates">
                <button class="not-a-button" {% if "Last Updates" in title  %}  id="selected" {% endif %}>Last updates <span class='right-align badge'>{{ last_updates }}</span></button>
            </a>
            <a href="/project/{{ in_use }}/duplicates">
                <button class="not-a-button" {% if "Duplicates" in title  %}    id="selected" {% endif %}>duplicates<span class='right-align badge'>{{ duplicates }}</span></button>
            </a>
        </div>
        
    </div>
    
    <div id="second_column" class="col s3">
        <div class="data-header">
            <i class="material-icons favorite" style="color: #9b9b9b; font-size:10px;">star</i>{{ data_header }}            
            <img class="triple-dots" data-activates='options-node'></img>                             
        </div>
        
        {#  #}
        <ul id='options-node' class='dropdown-content'>
            <li class="option-node"     href="#create-part" > <a id="create-part-button">  Create new Part</a></li>
            <li class="option-node" href="#create-assembly" > <a id="create-assembly-button">  Create new Assembly</a></li>
            <li class="option-node"     href="#insert-part" > <a id="insert-part-button">  Insert existing part</a></li>
            <li class="option-node" href="#insert-assembly" > <a id="insert-assembly-button">  Insert existing Assembly</a></li>
        </ul>
        
        <!-- Modal Structure -->
        <div id="create-part" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h4>Create a new Part</h4>
                </div>
                <div class="modal-body">
                    <form id="form-create-part" method="post" action="/test">
                        <p>Part Name</p>
                        <input type="text" name="part-name" id="part-name">
                        
                        <p>Description</p>
                        <input type="text" name="Description" id="Description">
                        
                        <p>3D Model</p>                    
                        <div class="file-field input-field">
                            <div class="files-button btn">
                                <span>...</span>
                                <input type="file">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                        </div>
                        
                        <p>Specs File</p>                    
                        <div class="file-field input-field">
                            <div class="files-button btn">
                                <span>...</span>
                                <input type="file" multiple>
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                        </div>
                        <br>
                        <p>Tags</p>
                        <div id="tags-create-part" class="chips"></div>
                        <button class="button-form-validate" type="submit">Create new Part</button>
                    </form>
                </div>
            </div>
        </div>
        
        
        <div id= class="scrollable scrollbar">
            {% include "search.twig" %}
            {% include "collapside.twig" %}                     
        </div>
    </div>
    
    <div id="third_column" class = "col s6">
        <div class="data-header valign-wrapper">
            {{ type }}
        </div>
        <div class="container">
            {% if type == 'viewer' %}
            {% include 'viewer.twig' %}
            {% endif %}        
        </div>
    </div>
</div>

{% endblock %}


{% block js %}
<script> var twignode = {{ node  }} </script>
<script src="/js/accordion.js"></script>
<script src="/js/hub.js"></script>
{% if type == 'viewer' %}
{% include "require_viewer.twig" %}
{% endif %}
{% endblock %}